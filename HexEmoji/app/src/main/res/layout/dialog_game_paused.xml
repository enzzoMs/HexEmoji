<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/game_paused_back_shape"
        android:background="@drawable/circle_shape"
        android:layout_width="@dimen/game_paused_size"
        android:layout_height="@dimen/game_paused_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:src="@drawable/ic_pause"
        app:tint="?attr/colorAccent"
        android:contentDescription="@string/game_paused_description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/game_paused_margin"
        app:layout_constraintTop_toTopOf="@id/game_paused_back_shape"
        app:layout_constraintBottom_toBottomOf="@id/game_paused_back_shape"
        app:layout_constraintEnd_toEndOf="@id/game_paused_back_shape"
        app:layout_constraintStart_toStartOf="@id/game_paused_back_shape"/>

</androidx.constraintlayout.widget.ConstraintLayout>