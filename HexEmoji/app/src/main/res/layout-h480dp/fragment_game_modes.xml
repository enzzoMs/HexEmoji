<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:overScrollMode="never"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.play.GameModesFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="@string/page_description_game_modes"
            style="@style/TextAppearance.HexEmoji.PageDescription"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/main_screens_outer_margin"
            android:layout_marginTop="@dimen/main_screens_outer_margin"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/game_mode_list"
            app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
            app:spanCount="@integer/game_modes_grid_span"
            android:nestedScrollingEnabled="false"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_screens_contents_margin"
            android:layout_marginHorizontal="@dimen/play_screens_list_horizontal_margin" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
