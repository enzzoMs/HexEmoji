<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.HexEmoji.GameModeCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/game_mode_card_outer_margin"
    android:layout_marginBottom="@dimen/game_mode_card_outer_margin">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/game_mode_card_inner_margin">

        <View
            android:id="@+id/emoji_background"
            android:background="@drawable/game_mode_card_emoji_back_shape"
            android:backgroundTint="@color/game_mode_card_primary_color_zen"
            android:layout_width="0dp"
            android:layout_height="@dimen/game_mode_card_emoji_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Black text color to avoid transparency-->
        <TextView
            android:id="@+id/emoji"
            android:text="@string/game_mode_card_emoji_lotus"
            android:textColor="#000000"
            android:textAlignment="center"
            app:autoSizeTextType="uniform"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginVertical="@dimen/game_mode_card_emoji_margin"
            app:layout_constraintEnd_toEndOf="@id/emoji_background"
            app:layout_constraintStart_toStartOf="@id/emoji_background"
            app:layout_constraintTop_toTopOf="@id/emoji_background"
            app:layout_constraintBottom_toBottomOf="@id/emoji_background"/>

        <TextView
            android:id="@+id/game_mode_title"
            android:text="@string/game_mode_title_zen"
            android:textColor="@color/game_mode_card_text_color_zen"
            android:textAppearance="@style/TextAppearance.HexEmoji.GameModeCard.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/game_mode_card_title_vertical_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emoji_background" />

        <TextView
            android:id="@+id/game_mode_description"
            android:text="@string/game_mode_description_zen"
            android:textAppearance="@style/TextAppearance.HexEmoji.GameModeCard.Description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/game_mode_card_title_vertical_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/game_mode_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

