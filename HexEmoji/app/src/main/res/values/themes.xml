<resources>
    <!-- Base application theme -->
    <style name="Theme.HexEmoji" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnPrimary">@color/on_primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="colorSurface">@color/surface_color</item>
        <item name="colorSurfaceDim">@color/surface_variant_dim</item>
        <item name="colorOnSurface">@color/on_surface_color</item>
        <item name="indicatorColor">@color/indicator_color</item>
        <item name="android:colorBackground">@color/background_color</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
        <item name="toolbarStyle">@style/Widget.HexEmoji.Toolbar</item>
        <item name="navigationViewStyle">@style/Widget.HexEmoji.NavigationView</item>
        <item name="navigationRailStyle">@style/Widget.HexEmoji.NavigationRail</item>
        <item name="bottomNavigationStyle">@style/Widget.HexEmoji.BottomNavigation</item>
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
    </style>

    <!-- Splash Screen -->
    <style name="Theme.HexEmoji.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/screen_splash_background_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_logo_alternative</item>
        <item name="postSplashScreenTheme">@style/Theme.HexEmoji</item>
    </style>

    <!-- Toolbar -->
    <style name="Widget.HexEmoji.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleCentered">true</item>
        <item name="android:elevation">0dp</item>
        <item name="titleTextAppearance">@style/TextAppearance.HexEmoji.Toolbar.Title</item>
    </style>

    <style name="TextAppearance.HexEmoji.Toolbar.Title" parent="TextAppearance.HexEmoji.Headline6">
        <item name="fontFamily">@font/lexend_semibold</item>
    </style>

    <!-- General Navigation -->
    <style name="TextAppearance.HexEmoji.Navigation" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/lexend_medium</item>
    </style>

    <!-- Navigation Rail -->
    <style name="Widget.HexEmoji.NavigationRail" parent="Widget.MaterialComponents.NavigationRailView">
        <item name="itemBackground">@drawable/navigation_rail_item_background</item>
        <item name="itemTextColor">@color/side_navigation_item_color</item>
        <item name="itemIconTint">@color/side_navigation_item_color</item>
        <item name="itemIconSize">@dimen/navigation_rail_icon_size</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.HexEmoji.Navigation</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.HexEmoji.Navigation</item>
        <item name="elevation">0dp</item>
    </style>

    <!-- Navigation View -->
    <style name="Widget.HexEmoji.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemIconTint">@color/side_navigation_item_color</item>
        <item name="itemTextColor">@color/side_navigation_item_color</item>
        <item name="itemIconSize">@dimen/navigation_drawer_icon_size</item>
        <item name="itemShapeFillColor">@color/navigation_drawer_fill_color</item>
        <item name="itemTextAppearance">@style/TextAppearance.HexEmoji.NavigationView</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="TextAppearance.HexEmoji.NavigationView" parent="TextAppearance.HexEmoji.Subtitle1">
        <item name="fontFamily">@font/lexend_medium</item>
    </style>

    <!-- Bottom Navigation -->
    <style name="Widget.HexEmoji.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemBackground">@drawable/bottom_nav_item_background</item>
        <item name="itemTextColor">@color/bottom_navigation_item_color</item>
        <item name="itemIconTint">@color/bottom_navigation_item_color</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.HexEmoji.Navigation</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.HexEmoji.Navigation</item>
    </style>

    <!-- Buttons -->
    <style name="Widget.HexEmoji.Button" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/text_size_subtitle1</item>
        <item name="android:paddingStart">@dimen/button_horizontal_inner_padding</item>
        <item name="android:paddingEnd">@dimen/button_horizontal_inner_padding</item>
        <item name="android:paddingTop">@dimen/button_vertical_inner_padding</item>
        <item name="android:paddingBottom">@dimen/button_vertical_inner_padding</item>
        <item name="fontFamily">@font/lexend_bold</item>
    </style>

    <style name="Widget.HexEmoji.Button.Primary">
        <item name="android:background">@drawable/button_primary_background</item>
        <item name="android:textColor">@color/button_primary_text_color</item>
    </style>

    <style name="Widget.HexEmoji.Button.Secondary">
        <item name="android:background">@drawable/button_secondary_shape</item>
        <item name="android:textColor">@color/button_secondary_text_color</item>
    </style>

    <!-- App Title and Subtitle -->
    <style name="TextAppearance.HexEmoji.AppTitle.FirstPart" parent="TextAppearance.HexEmoji.Headline2">
        <item name="fontFamily">@font/lexend_bold</item>
        <item name="android:textColor">@color/app_title_first_part_color</item>
    </style>

    <style name="TextAppearance.HexEmoji.AppTitle.LastPart" parent="TextAppearance.HexEmoji.Headline2">
        <item name="fontFamily">@font/lexend_bold</item>
        <item name="android:textColor">@color/app_title_last_part_color</item>
    </style>

    <style name="TextAppearance.HexEmoji.AppSubtitle" parent="TextAppearance.HexEmoji.Subtitle1">
        <item name="fontFamily">@font/lexend_bold</item>
    </style>

    <!-- Page Description -->
    <style name="TextAppearance.HexEmoji.PageDescription" parent="TextAppearance.HexEmoji.Subtitle1">
        <item name="fontFamily">@font/lexend_semibold</item>
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:padding">@dimen/page_description_padding</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Cards -->
    <style name="Widget.HexEmoji.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="TextAppearance.HexEmoji.CardView.Title" parent="TextAppearance.HexEmoji.Subtitle1">
        <item name="fontFamily">@font/lexend_semibold</item>
    </style>

    <style name="TextAppearance.HexEmoji.CardView.Description" parent="TextAppearance.HexEmoji.Subtitle2">
        <item name="fontFamily">@font/lexend_medium</item>
    </style>

    <style name="TextAppearance.HexEmoji.CardView.BoardSize" parent="TextAppearance.HexEmoji.CardView.Title">
        <item name="fontFamily">@font/lexend_bold</item>
        <item name="android:textColor">@color/board_size_text_color</item>
    </style>

    <!-- Check Box -->
    <style name="Widget.HexEmoji.CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textAppearance">@style/TextAppearance.HexEmoji.Subtitle2</item>
        <item name="fontFamily">@font/lexend_semibold</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <!-- Dialogs -->
    <style name="TextAppearance.HexEmoji.Dialog" parent="TextAppearance.HexEmoji.Subtitle1">
        <item name="fontFamily">@font/lexend_semibold</item>
    </style>

    <style name="TextAppearance.HexEmoji.Dialog.ExitGame" parent="TextAppearance.HexEmoji.Subtitle1">
        <item name="fontFamily">@font/lexend_medium</item>
    </style>

    <!-- Custom Views -->
    <style name="TextAppearance.HexEmoji.EmojiCard" parent="">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <!-- Game Mode Screens -->
    <style name="ThemeOverlay.HexEmoji.GameMode.Zen" parent="">
        <item name="colorPrimary">@color/game_screen_primary_color</item>
        <item name="colorOnPrimary">@color/game_mode_main_color_zen</item>
        <item name="colorAccent">@color/game_mode_main_color_zen</item>
        <item name="colorSurfaceVariant">@color/game_mode_surface_variant_color_zen</item>
        <item name="colorOnSurfaceVariant">@color/game_mode_on_surface_variant_color_zen</item>
        <item name="android:colorBackground">@color/game_mode_background_color_zen</item>
    </style>

    <!-- Base Text Appearance -->
    <style name="TextAppearance.HexEmoji.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">@dimen/text_size_headline2</item>
    </style>

    <style name="TextAppearance.HexEmoji.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/text_size_headline6</item>
    </style>

    <style name="TextAppearance.HexEmoji.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">@dimen/text_size_subtitle1</item>
    </style>

    <style name="TextAppearance.HexEmoji.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">@dimen/text_size_subtitle2</item>
    </style>

</resources>