<resources>
    <!-- Base application theme -->
    <style name="Theme.HexEmoji" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="android:fontFamily">@font/lexend_family</item>
        <item name="primaryButtonStyle">@style/Widget.HexEmoji.Button.Primary</item>
        <item name="secondaryButtonStyle">@style/Widget.HexEmoji.Button.Secondary</item>
    </style>

    <style name="Widget.HexEmoji.Button" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:padding">@dimen/button_padding</item>
    </style>

    <style name="Widget.HexEmoji.Button.Primary">
        <item name="android:background">@drawable/button_primary_gradient</item>
        <item name="android:textColor">@color/button_primary_text_color</item>
    </style>

    <style name="Widget.HexEmoji.Button.Secondary">
        <item name="android:background">@drawable/button_secondary_shape</item>
        <item name="android:textColor">@color/button_secondary_text_color</item>
    </style>

    <!-- Splash Screen -->
    <style name="Theme.HexEmoji.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/screen_splash_background_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_logo_alternative</item>
        <item name="postSplashScreenTheme">@style/Theme.HexEmoji</item>
    </style>

    <!-- Initial Screen -->
    <style name="Theme.HexEmoji.Initial">
        <item name="android:background">@color/screen_initial_background_color</item>
        <item name="appTitleFirstPartAppearance">@style/TextAppearance.HexEmoji.AppTitle.FirstPart</item>
        <item name="appTitleLastPartAppearance">@style/TextAppearance.HexEmoji.AppTitle.LastPart</item>
        <item name="appSubtitleAppearance">@style/TextAppearance.HexEmoji.AppSubtitle</item>
    </style>

    <style name="TextAppearance.HexEmoji.AppTitle" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">@dimen/initial_screen_app_title_text_size</item>
        <item name="fontWeight">800</item>
    </style>

    <style name="TextAppearance.HexEmoji.AppTitle.FirstPart">
        <item name="android:textColor">@color/screen_initial_app_title_first_part_color</item>
    </style>

    <style name="TextAppearance.HexEmoji.AppTitle.LastPart">
        <item name="android:textColor">@color/screen_initial_app_title_last_part_color</item>
    </style>

    <style name="TextAppearance.HexEmoji.AppSubtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/screen_initial_app_subtitle_color</item>
        <item name="android:textSize">@dimen/initial_screen_app_subtitle_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>