<resources>
    <!-- Base application theme -->
    <style name="Theme.HexEmoji" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnPrimary">@color/on_primary_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="colorSurface">@color/surface_color</item>
        <item name="android:colorBackground">@color/background_color</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="iconTint">@color/icon_tint</item>
        <item name="navigationIconTint">@color/icon_tint</item>
        <item name="toolbarStyle">@style/Widget.HexEmoji.Toolbar</item>
        <item name="navigationViewStyle">@style/Widget.HexEmoji.NavigationView</item>
        <item name="navigationRailStyle">@style/Widget.HexEmoji.NavigationRail</item>
        <item name="bottomNavigationStyle">@style/Widget.HexEmoji.BottomNavigation</item>
        <item name="android:statusBarColor">@color/status_bar_color</item>
    </style>

    <!-- Splash Screen -->
    <style name="Theme.HexEmoji.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/screen_splash_background_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_logo_alternative</item>
        <item name="postSplashScreenTheme">@style/Theme.HexEmoji</item>
    </style>

    <!-- Initial Screen -->
    <style name="ThemeOverlay.HexEmoji.Initial" parent="">
        <item name="android:colorBackground">@color/screen_initial_background_color</item>
    </style>

    <!-- Toolbar -->
    <style name="Widget.HexEmoji.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleCentered">true</item>
        <item name="android:elevation">0dp</item>
        <item name="titleTextAppearance">@style/TextAppearance.HexEmoji.Toolbar.Title</item>
    </style>

    <style name="TextAppearance.HexEmoji.Toolbar.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/lexend_semibold</item>
    </style>

    <!-- General Navigation -->
    <style name="TextAppearance.HexEmoji.Navigation" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/lexend_medium</item>
    </style>

    <!-- Navigation Rail -->
    <style name="Widget.HexEmoji.NavigationRail" parent="Widget.MaterialComponents.NavigationRailView">
        <item name="itemBackground">@drawable/navigation_rail_item_background</item>
        <item name="itemTextColor">@color/side_navigation_item_color</item>
        <item name="itemIconTint">@color/side_navigation_item_color</item>
        <item name="itemIconSize">@dimen/navigation_rail_icon_size</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.HexEmoji.Navigation</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.HexEmoji.Navigation</item>
        <item name="elevation">0dp</item>
    </style>

    <!-- Navigation View -->
    <style name="Widget.HexEmoji.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemIconTint">@color/side_navigation_item_color</item>
        <item name="itemTextColor">@color/side_navigation_item_color</item>
        <item name="itemIconSize">@dimen/navigation_drawer_icon_size</item>
        <item name="itemShapeFillColor">@color/navigation_drawer_fill_color</item>
        <item name="itemTextAppearance">@style/TextAppearance.HexEmoji.NavigationView</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="TextAppearance.HexEmoji.NavigationView" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">@dimen/navigation_drawer_text_size</item>
        <item name="fontFamily">@font/lexend_medium</item>
    </style>

    <!-- Bottom Navigation -->
    <style name="Widget.HexEmoji.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemBackground">@drawable/bottom_nav_item_background</item>
        <item name="itemTextColor">@color/bottom_navigation_item_color</item>
        <item name="itemIconTint">@color/bottom_navigation_item_color</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.HexEmoji.Navigation</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.HexEmoji.Navigation</item>
    </style>

    <!-- Buttons -->
    <style name="Widget.HexEmoji.Button" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/button_text_size</item>
        <!-- Using edge-specific padding values so that they can be overridden in other situations -->
        <item name="android:paddingStart">@dimen/button_inner_padding</item>
        <item name="android:paddingEnd">@dimen/button_inner_padding</item>
        <item name="android:paddingTop">@dimen/button_inner_padding</item>
        <item name="android:paddingBottom">@dimen/button_inner_padding</item>
        <item name="fontFamily">@font/lexend_bold</item>
    </style>

    <style name="Widget.HexEmoji.Button.Primary">
        <item name="android:background">@drawable/button_primary_background</item>
        <item name="android:textColor">@color/button_primary_text_color</item>
    </style>

    <style name="Widget.HexEmoji.Button.Secondary">
        <item name="android:background">@drawable/button_secondary_shape</item>
        <item name="android:textColor">@color/button_secondary_text_color</item>
    </style>

    <!-- App Title and Subtitle -->
    <style name="TextAppearance.HexEmoji.AppTitle.FirstPart" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/lexend_bold</item>
        <item name="android:textColor">@color/app_title_first_part_color</item>
    </style>

    <style name="TextAppearance.HexEmoji.AppTitle.LastPart" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/lexend_bold</item>
        <item name="android:textColor">@color/app_title_last_part_color</item>
    </style>

    <style name="TextAppearance.HexEmoji.AppSubtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/lexend_bold</item>
    </style>

    <!-- Page Description -->
    <style name="TextAppearance.HexEmoji.PageDescription" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/lexend_semibold</item>
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:padding">@dimen/page_description_padding</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Card View -->
    <style name="Widget.HexEmoji.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="TextAppearance.HexEmoji.CardView.Title" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/lexend_semibold</item>
    </style>

    <style name="TextAppearance.HexEmoji.CardView.Description" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/lexend_medium</item>
    </style>

    <!-- Check Box -->
    <style name="Widget.HexEmoji.CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="fontFamily">@font/lexend_semibold</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

</resources>