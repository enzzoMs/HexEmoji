<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.HexEmoji" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnPrimary">@color/on_primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="colorSurface">@color/surface_color</item>
        <item name="colorSurfaceDim">@color/surface_variant_dim</item>
        <item name="colorOnSurface">@color/on_surface_color</item>
        <item name="indicatorColor">@color/indicator_color</item>
        <item name="android:colorBackground">@color/background_color</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
        <item name="android:windowMinWidthMajor">@dimen/window_min_width_major</item>

        <item name="toolbarStyle">@style/Widget.HexEmoji.Toolbar</item>
        <item name="navigationViewStyle">@style/Widget.HexEmoji.NavigationView</item>
        <item name="navigationRailStyle">@style/Widget.HexEmoji.NavigationRail</item>
        <item name="bottomNavigationStyle">@style/Widget.HexEmoji.BottomNavigation</item>
        <item name="checkboxStyle">@style/Widget.HexEmoji.CheckBox</item>
        <item name="tabStyle">@style/Widget.HexEmoji.TabLayout</item>
        <item name="textInputStyle">@style/Widget.HexEmoji.TextInputLayout</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.HexEmoji.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splash_screen_background_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.HexEmoji</item>
    </style>
</resources>